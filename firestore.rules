rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Water reports - anyone can read, authenticated users can write
    match /waterReports/{reportId} {
      // Anyone can read reports (for public safety)
      allow read: if true;

      // Only authenticated users can create reports
      allow create: if request.auth != null
        && request.auth.uid == resource.data.userId;

      // Users can update their own reports within 1 hour
      allow update: if request.auth != null
        && request.auth.uid == resource.data.userId
        && request.time < resource.data.createdAt + duration.value(1, 'h');

      // Only report authors can delete their reports
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }

    // Water locations - read-only for now
    match /waterLocations/{locationId} {
      allow read: if true;
      // TODO: Add admin write permissions later
    }

    // Verification queue - system use only
    match /verificationQueue/{queueId} {
      allow read: if request.auth != null;
      // Write permissions handled by cloud functions
    }
  }
}

